<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ButtonBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/suggestedItemView"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/tvPlace2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/ciCountry"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"

                android:layout_gravity="center"
                android:src="@drawable/israelflag" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvDisplayName"
                android:paddingTop="8dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:alpha="0.7"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="16sp"/>

        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.ButtonBarLayout>